<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F7FA"
        tools:context=".MainActivity">


    <ImageView android:layout_width="match_parent"
               android:layout_height="311dp"
               android:background="@drawable/headerlogin"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:id="@+id/imageView"/>


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="LaboratCall"
              android:textColor="#ffffff"
              android:textSize="35sp"
              android:textStyle="bold" android:layout_marginTop="172dp"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="24dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
              android:id="@+id/textView"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Melayani Anda Dimanapun dan Kapanpun"
              android:textColor="#ffffff"
              android:textSize="15sp"
              app:layout_constraintTop_toBottomOf="@+id/textView"
              android:id="@+id/textView2"
              android:layout_marginStart="24dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="14dp"
              android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"/>

    <EditText android:layout_width="280dp"
              android:layout_height="55dp"
              android:paddingLeft="20dp"
              android:background="@drawable/inputlogin1"
              android:hint="username" android:layout_marginTop="52dp"
              app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
              android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.488"
              android:id="@+id/editText2"/>
    <EditText android:layout_width="280dp"
              android:layout_height="55dp"
              android:inputType="textPassword"
              android:paddingLeft="20dp"
              android:background="@drawable/inputlogin1"
              android:hint="password" app:layout_constraintTop_toBottomOf="@+id/editText2"
              android:layout_marginTop="16dp"
              android:id="@+id/editText" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginRight="8dp"/>

    <Button
            android:background="@drawable/tblogin"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="Login"
            android:textColor="#ffff"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:id="@+id/button2" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/editText"/>
</android.support.constraint.ConstraintLayout>